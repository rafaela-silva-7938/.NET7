<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redefinição de senha</title>

    <!-- Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body class="bg-dark text-white">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card bg-dark text-white shadow-lg p-4" style="width: 100%; max-width: 500px;">
            <h5 class="text-center mb-3">Redefinição de Senha</h5>

            <!-- Div de Alerta -->
            <div class="alert alert-warning alert-dismissible fade show" id="divAlert" role="alert" style="display:none;">
                <label>Espere um momento até que o e-mail seja enviado!</label>
                <button type="button" class="btn-close" aria-label="Close" onclick="$('#divAlert').hide();"></button>
            </div>

            <!-- Div de Sucesso -->
            <div class="alert alert-success alert-dismissible fade show" id="divSuccess" role="alert" style="display:none;">
                <strong>Sucesso!</strong> <label id="successMsg"></label>
                <button type="button" class="btn-close" aria-label="Close" onclick="$('#divSuccess').hide();"></button>
            </div>

            <!-- Div de Erro -->
            <div class="alert alert-danger alert-dismissible fade show" id="divErro" role="alert" style="display:none;">
                <strong>Erro!</strong> <label id="errorMsg"></label>
                <button type="button" class="btn-close" aria-label="Close" onclick="$('#divErro').hide();"></button>
            </div>

            <form id="friendform" method="post">
    
                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <input id="txtEmail" required minlength="6" maxlength="50" name="Email" type="text" class="form-control bg-dark text-white border-light" />
                </div>

                <div class="d-grid">
                    <input id="btnSubmit" type="button" value="Enviar" class="btn btn-primary">
                </div>

                <div class="text-center mt-3">
                    <a href="/Usuario/Login" class="text-white text-decoration-none">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
<script>
    $(document).ready(function () {


        $("#divErro").hide();
        $("#divSuccess").hide();

        $("#btnSubmit").click(function (e) {
            e.preventDefault();
            var EsqueciSenhaViewModel = {
            
                Email: $("#txtEmail").val()
            };

            $("#divAlert").fadeIn().delay(3000).fadeOut();

            $.ajax({
                type: "POST",
                url: "/Usuario/EsqueciSenha",
                data: EsqueciSenhaViewModel,
                dataType: "json",
                success: function (response) {
                    $("#divErro").hide();
                    if (response.errorStr) {
                        $("#errorMsg").html(response.errorStr);
                        $("#divErro").show();
                    } else {
                        $("#divSuccess").show();
                        $("#successMsg").html(response);
                        $("#txtEmail").val('');
                    }
                },
                error: function (xhr) {
                    $("#errorMsg").html(xhr.responseText);
                    $("#divErro").show();
                }
            });
        });
    });
</script>
