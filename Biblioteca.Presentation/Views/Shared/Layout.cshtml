<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Sistema de Biblioteca</title>

    <!-- Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .card-container {
            min-width: 320px; /* Garante compatibilidade com telas pequenas */
            max-width: 75%; /* A largura máxima será 75% da tela */
            width: 100%; /* Ocupa a largura disponível */
            margin: 20px auto; /* Centraliza o card e adiciona margem */
            margin-top: 80px; /* Adiciona uma margem na parte superior para evitar que o título seja cortado */
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Sistema de Biblioteca</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="livrosDropdown" role="button" data-bs-toggle="dropdown">
                            Gerenciar Meus Livros
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="@Url.Action("LivrosCadastrados", "Usuario")">📖 Livros cadastrados</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("CadastrarLivro", "Livro")">➕ Cadastrar Livro</a></li>
                        </ul>

                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Conteúdo Principal -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card card-container shadow-lg p-4">
            @RenderBody()
        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-5 text-center py-3 bg-light">
        <p>© @DateTime.Now.Year - Nossa Biblioteca</p>
    </footer>

</body>
</html>
